# ===========================================================================
# API Configuration
# ===========================================================================
# Base API endpoints for different services
VITE_API_URL=http://localhost:8080
VITE_NOTIFICATION_URL=http://localhost:8082
VITE_CHAT_URL=http://localhost:8083

# ===========================================================================
# Authentication Configuration
# ===========================================================================
# AUTH_MODE: Controls available authentication methods
#   - LDAP_ONLY: Only LDAP authentication (no standard login/registration)
#   - STANDARD_ONLY: Only username/password login with registration
#   - ALL: All authentication methods enabled (default)
VITE_AUTH_MODE=ALL

# ===========================================================================
# AI Models Configuration
# ===========================================================================
# AI model configurations for different services
# Multiple models can be specified using comma separation
# First model in the list will be used as default

# OpenAI models (GPT family)
VITE_AI_MODELS_OPENAI=gpt-4o,gpt-4-turbo,gpt-3.5-turbo

# Anthropic Claude models (currently unused, but kept for future support)
VITE_AI_MODELS_ANTHROPIC=claude-3-opus,claude-3-sonnet

# DeepSeek models (currently unused, but kept for future support)
VITE_AI_MODELS_DEEPSEEK=deepseek-chat

# Google Gemini models
VITE_AI_MODELS_GEMINI=gemini-2.0-flash

# ===========================================================================
# Demo Mode Configuration
# ===========================================================================
VITE_DEMO_MODE=true
VITE_DEMO_ADMIN_PASSWORD=1234
VITE_DEMO_TEACHER_PASSWORD=1234
VITE_DEMO_STUDENT_PASSWORD=1234

# ===========================================================================
# Server configuration
# ===========================================================================
PORT=9533

